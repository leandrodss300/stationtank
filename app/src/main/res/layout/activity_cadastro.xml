<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.CadastroActivity">

    <EditText
        android:id="@+id/editSenhaCadastro"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginBottom="184dp"
        android:ems="10"
        android:hint="Digite sua senha:"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textSenhaCadastro"
        android:layout_width="181dp"
        android:layout_height="20dp"
        android:text="Senha:"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editSenhaCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editNomeCadastro"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginBottom="332dp"
        android:ems="10"
        android:hint="Digite um nome de usuário"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editEmailCadastro"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginBottom="256dp"
        android:ems="10"
        android:hint="Digite seu e-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textEmailCadastro"
        android:layout_width="181dp"
        android:layout_height="20dp"
        android:text="E-mail:"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editEmailCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textUsuarioCadastro"
        android:layout_width="181dp"
        android:layout_height="20dp"
        android:text="Usuário:"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editNomeCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgCadastro"
        android:layout_width="205dp"
        android:layout_height="251dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textUsuarioCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_add_black_24dp" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="274dp"
        android:layout_height="64dp"
        android:layout_marginBottom="100dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="validarUsuario"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>